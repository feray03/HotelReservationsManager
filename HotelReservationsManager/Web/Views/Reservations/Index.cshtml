@model IEnumerable<Data.Entities.Reservation>

@{ ViewData["Title"] = "Index"; }

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Room number
            </th>
            <th>
                User
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckInDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IncludedBreakfast)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAllInclusive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Room.Number)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CheckInDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CheckOutDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IncludedBreakfast)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsAllInclusive)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FinalPrice)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
