@model IEnumerable<Data.Entities.Room>

@{
    ViewData["Title"] = "List of all rooms";
}

<h1>List of all rooms</h1>

@if (User.Identity.Name == "admin@abv.bg")
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Capacity
            </th>
            <th>
                RoomType
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceForAdult)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceForKids)
            </th>
            <th>
                RoomNumber
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAvailable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceForAdult)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceForKids)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @if (User.Identity.Name == "admin@abv.bg")
                    {<a asp-action="Edit" asp-route-id="@item.Id">Edit |</a>}
                    @if (User.Identity.Name == "admin@abv.bg")
                    {<a asp-action="Delete" asp-route-id="@item.Id">Delete |</a>}
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
