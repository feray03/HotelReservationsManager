@model IEnumerable<Data.Entities.User>

@{ ViewData["Title"] = "Users"; }

<h1>List of all users</h1>

@foreach (var item in Model)
{
    if (item.Email == User.Identity.Name)
    {
        if (item.IsAdmin == true)
        {
<p>
    <a asp-area="Identity" asp-page="/Account/Register">Create new user</a>
</p>

                        <p>
                            <a asp-action="EditUsers"> Edit users</a>
                        </p>
                                                <p>
                                                    <a asp-action="DeleteUsers"> Delete users</a>
                                                </p>
                                                                        <p>
                                                                            <a asp-action="LockUsers"> Lock users</a>
                                                                        </p>}
                                                                                            break;
                                                                                        }
                                                                                    }

<table class="table">
    <thead>
        <tr>
            <th>
                First name
            </th>
            <th>
                Middle name
            </th>
            <th>
                Last name
            </th>
            <th>
                Acitve
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Phone number
            </th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MiddleName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsActive)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>

    <td>
        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
    </td>

</tr>}
    </tbody>
</table>
